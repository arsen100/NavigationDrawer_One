<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btn_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Toast From Fragment gps"
        />

    <TextView
        android:id="@+id/textView1"
        android:layout_below="@+id/btn_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/screen_three"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/butGetText"
        android:layout_below="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Прочитать данные" />
    <TextView
        android:id="@+id/tvGetMessage"
        android:layout_below="@+id/butGetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="поле для  GPS фрагмент" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_below="@+id/tvGetMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="поле для  Edit TEXT" />

    <EditText
        android:id="@+id/editText"
        android:layout_below="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>


</RelativeLayout>